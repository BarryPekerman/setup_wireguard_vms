# Copy this file to terraform.tfvars and customize the values

aws_region = "eu-north-1"
project_name = "wireguard-setup"
vpc_cidr = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
private_subnet_cidr = "10.0.2.0/24"
instance_type = "t3.nano"
public_key_path = "~/.ssh/id_rsa.pub"
private_key_path = "~/.ssh/id_rsa"

# SECURITY: Restrict SSH access to your IP only
# Option 1: Leave empty for auto-detection (recommended)
allowed_ssh_cidr = ""

# Option 2: Set your specific IP (e.g., "203.0.113.10/32")
# allowed_ssh_cidr = "203.0.113.10/32"

# Option 3: Set multiple IPs (e.g., office and home)
# allowed_ssh_cidr = "203.0.113.10/32,198.51.100.20/32"
